<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_activity_layout"
    tools:context="latest.player.music.musiclayer.MainActivity">
    <EditText
        android:id="@+id/edt_search_song"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="#000"
        android:textColor="#fff"
        android:layout_height="40dp" />
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginStart="5dp"
            android:id="@+id/album_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_album_white"
                android:id="@+id/album_list_main_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="ALBUMS"
                android:textColor="#fff"
                android:textStyle="italic|bold"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:id="@+id/artist_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@drawable/ic_album_white"
                android:id="@+id/artist_list_main_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="ARTISTS"
                android:textColor="#fff"
                android:textStyle="italic|bold"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:id="@+id/genres_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@drawable/ic_album_white"
                android:id="@+id/genres_list_main_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="GENRES"
                android:textColor="#fff"
                android:textStyle="italic|bold"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:id="@+id/search_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="#30ffffff"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="2dp"
                android:src="@drawable/ic_search_white"
                android:id="@+id/search_main_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="SEARCH"
                android:textColor="#fff"
                android:textStyle="italic|bold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="30dp"
        android:layout_below="@id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/song_recyclerview"/>
        
        <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
            android:layout_width="15dp"
            android:id="@+id/fast_scroller"
            android:layout_height="match_parent"
            android:layout_alignParentEnd ="true"
            android:layout_marginStart="3dp"
            android:layout_below="@id/linear_layout"
            app:rfs_barColor="#aafd4a"
            app:rfs_handleColor="#fff"/>

    <LinearLayout
        android:background="#60000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="50dp"
        android:id="@+id/bottom_player_layout"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:padding="2dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_settings_white"
            android:id="@+id/settings"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.50"
            android:src="@drawable/ic_audiotrack_white"
            android:id="@+id/bottom_player_album_art"/>
        <ImageView
            android:id="@+id/play_previous_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_previous_white"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/pause_btn"
            android:layout_weight="1"
            android:src="@drawable/ic_play_arrow_white"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_next_white"
            android:id="@+id/play_next_btn"/>

    </LinearLayout>

</RelativeLayout>
